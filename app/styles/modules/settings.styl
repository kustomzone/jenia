.jn-settings
    lost-flex-container row
    height 100%
    &__header
        padding 15px 20px
        width 100%
        border-bottom 1px solid #eee
        &-title
            margin 0
    &__menu
        height 100%
        box-sizing border-box
        lost-column 1/3 flex
        white-space pre-line
        
        &-item
            cursor pointer
            padding 15px
            border-left 5px solid transparent
            &--active
                font-weight bold
                border-left: 5px solid $cl.blue
    
    &__content
        box-sizing border-box
        lost-column 2/3 flex

.jn-servers
    &__default-label
        border 1px solid
        display inline-block
        padding 3px 6px
        border-radius 2px
        font-size 11px
        color: $cl.gray

.jn-about
    &__content
        inline-dl()
        dt
            color: #ccc
    padding 20px