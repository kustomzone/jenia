.jn-table
    width 100%
    &__th
        color $app-color-gray
        padding 15px 0 15px 25px
        text-transform uppercase
        font-size 11px
        font-weight bold
        border-bottom 1px solid #ccc
        margin-bottom 10px
    &__row 
        td 
            padding 15px 0 15px 25px
        &:hover
            background #f7f7f7

.jn-actions
    fill: $cl.gray
    height 22px
    font-size 11px
    text-transform uppercase

    padding 5px 0
    margin-right 5px
    display inline-block
    &__action
        float left
        cursor pointer
        border-right 1px solid #eee
        border-radius 2px
        padding 5px 10px
        &:hover 
            background #eee
        &:last-child
            border-right none
        span.oi:before
            margin-right 5px
            
.jn-table--scrollable
    height 100%
    display flex
    flex-direction column
    thead, tbody tr 
        display table
        table-layout fixed

    thead 
        flex 0 0 auto
        width 100%
    tbody
        overflow-y scroll
        position relative
        height 100% 
        display block
        flex 1 1 auto
        tr 
            width 100%